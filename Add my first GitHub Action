name: My First Action with Email

on:
  workflow_dispatch:  # This lets you run it manually

jobs:
  test:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        
      - name: 24f3002140@ds.study.iitm.ac.in - This step contains my email
        run: |
          echo "Hello from my GitHub Action!"
          echo "This step contains my email address: 24f3002140@ds.study.iitm.ac.in"
          echo "The current time is $(date)"
